<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_buttons"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margins"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/top_button_weight"
            android:gravity="left">
            <Button
                android:layout_width="@dimen/top_buttons"
                android:layout_height="@dimen/top_buttons"
                android:layout_marginLeft="@dimen/margins"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/top_button_weight"
            android:gravity="right">
            <Button
                android:layout_width="@dimen/top_buttons"
                android:layout_height="@dimen/top_buttons"
                android:layout_marginRight="@dimen/margins"></Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/middle_button"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margins"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:layout_width="@dimen/bottom_button"
            android:layout_height="@dimen/bottom_button"></Button>
    </LinearLayout>

</LinearLayout>