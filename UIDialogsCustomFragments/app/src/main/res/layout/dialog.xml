<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:autoStart="true"
        android:flipInterval="1000">
        <ImageView
            android:layout_width="@dimen/tv_width"
            android:layout_height="@dimen/tv_height"
            android:src="@drawable/djengo">
        </ImageView>
        <ImageView
            android:layout_width="@dimen/tv_width"
            android:layout_height="@dimen/tv_height"
            android:src="@drawable/inglorious_bastards">
        </ImageView>
    </ViewFlipper>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center_horizontal">
        <Button android:id="@+id/start_show"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/start_button_label">
        </Button>
        <Button android:id="@+id/stop_show"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/stop_button_label">
        </Button>
        <Button android:id="@+id/end_show"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/end_button_label">
        </Button>
    </LinearLayout>
</LinearLayout>