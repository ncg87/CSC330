<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/name1"
                android:text="@string/player1"
                style="@style/NameText"></EditText>
            <ImageButton
                android:id="@+id/player1_image"
                style="@style/PlayerImage.1"></ImageButton>
        </LinearLayout>
        <RatingBar
            android:id="@+id/wins_player1"
            style="@style/RatingBar"
            ></RatingBar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/name2"
                android:text="@string/player2"
                style="@style/NameText"></EditText>
            <ImageButton
                android:id="@+id/player2_image"
                style="@style/PlayerImage.2"></ImageButton>
        </LinearLayout>
        <RatingBar
            android:id="@+id/wins_player2"
            style="@style/RatingBar"
            ></RatingBar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:gravity="center">
    <Button
        android:id="@+id/play_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/play_button"
        android:textSize="@dimen/button_text_size"
        android:onClick="myClickHandler"></Button>
    </LinearLayout>

</LinearLayout>