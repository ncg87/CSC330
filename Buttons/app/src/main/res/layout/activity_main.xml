<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/hide_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/upper_area_weight"
        android:layout_marginLeft="@dimen/top_button_left_margin"
        android:text="@string/hello1"
        android:onClick="myClickHandler">
    </Button>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/lower_area_weight">
        <Button
            android:layout_width="@dimen/lower_button_width"
            android:layout_height="match_parent"
            android:text="@string/hello2">
        </Button>
        <TextView
            android:id="@+id/the_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:text="@string/hello3">
        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <Button
                android:layout_width="@dimen/lower_button_width"
                android:layout_height="match_parent"
                android:padding="@dimen/lower_right_button_padding"
                android:text="hello2"
                android:clickable="false">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>